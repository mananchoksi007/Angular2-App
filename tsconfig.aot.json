{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [ "es2015", "dom" ],
        "typeRoots": [ "node_modules/@types" ],
        "types": [ "node" ], 
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.e2e.ts"
    ]
}